// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Rol{
  ID_Rol Int @id @default(autoincrement())
  nombreRol String
  usuarios Usuario[]
  detalles detalleRol[]
}

model Permiso{
  ID_Permiso Int @id @default(autoincrement())
  nombrePermiso String
  detalles detalleRol[]
}

model Restriccion{
  ID_Restriccion Int @id @default(autoincrement())
  nombreRestriccion String
  detalles detalleRol[]
}

model detalleRol{
  ID_Detalle Int @id @default(autoincrement())
  rol Rol  @relation(fields: [ID_rol], references: [ID_Rol])
  ID_rol Int
  permiso Permiso  @relation(fields: [ID_permiso], references: [ID_Permiso])
  ID_permiso Int
  restriccion Restriccion  @relation(fields: [ID_restriccion], references: [ID_Restriccion])
  ID_restriccion Int

}

model estadoUsuario{
  ID_Estado Int @id @default(autoincrement())
  estado Int
  usuarios Usuario[]
}

model Usuario{
  ID_Usuario Int @id @default(autoincrement())
  DPI String
  primerNombre String 
  primerApellido String
  nombreUsuario String @unique
  Contrasenia String
  rol Rol  @relation(fields: [ID_rol], references: [ID_Rol])
  ID_rol Int
  estado estadoUsuario  @relation(fields: [ID_estado], references: [ID_Estado])
  ID_estado Int
  carrera Carrera @relation(fields: [ID_carrera], references: [ID_Carrera])
  ID_carrera Int
  registros registroUsuario[]
  registroTrabajograd registroTrabajoGraduacion[]
}

model registroUsuario{
  ID_Registro Int @id @default(autoincrement())
  fechaRegistro DateTime @default(now())
  usuario Usuario  @relation(fields: [ID_usuario], references: [ID_Usuario])
  ID_usuario Int
  descripcion String? 
}

model NivelEducativo{
  ID_NivelEducativo Int @id @default(autoincrement())
  nombreNivelEducativo String
  gradoAcademico GradoAcademico[]
}

model GradoAcademico{
  ID_Grado Int @id @default(autoincrement())
  nombreGrado String
  nivelEducativo NivelEducativo @relation(fields: [ID_NivelEducativo], references: [ID_NivelEducativo])
  ID_NivelEducativo Int
  carrera EnlaceGradoCarrera[]
}

model Facultad{
  ID_Facultad Int @id @default(autoincrement())
  nombreFacultad String
  carrera Carrera[]
}

model Carrera{
  ID_Carrera Int @id @default(autoincrement())
  nombreCarrera String
  codigoCarrera String
  facultad Facultad @relation(fields: [ID_Facultad], references: [ID_Facultad])
  ID_Facultad Int
  registroTrabajograd registroTrabajoGraduacion[]
  usuario Usuario[]
  gradoAcademico EnlaceGradoCarrera[]
}

model EnlaceGradoCarrera{
  ID_Grado Int
  ID_Carrera Int
  gradoAcademico GradoAcademico @relation(fields: [ID_Grado], references: [ID_Grado])
  carrera Carrera @relation(fields: [ID_Carrera], references: [ID_Carrera])
  @@id([ID_Grado, ID_Carrera])
  estadoGC estadoEnlaceCarrera @relation(fields: [ID_Estado], references: [ID_Estado])
  ID_Estado Int
}

model estadoEnlaceCarrera{
  ID_Estado Int @id @default(autoincrement())
  estado Int
  enlaceGC EnlaceGradoCarrera[]
}

model Categoria{
  ID_Categoria Int @id @default(autoincrement())
  nombreCategoria String
  registroTrabajograd registroTrabajoGraduacion[]
}

model TrabajoGraduacion{
  ID_Trabajo Int @id @default(autoincrement())
  correlativo String
  titulo String
  cantidadPaginas Int?
  descripcion String ?
  tamanio Int?
  direccionGuardado String
  paClave String?
  notaTesis String?
  editorial String?
  registroTrabajograd registroTrabajoGraduacion[]
}

model Formato{
  ID_Formato Int @id @default(autoincrement())
  nombreFormato String
  registroTrabajograd registroTrabajoGraduacion[]
}

model TipoMaterial{
  ID_TipoMaterial Int @id @default(autoincrement())
  nombreTipoMaterial String
  registroTrabajograd registroTrabajoGraduacion[]
}

model Idiomas{
  ID_Idioma Int @id @default(autoincrement())
  nombre String
  codigo String
  registroTrabajograd registroTrabajoGraduacion[]
}

model estadoTrabajoGraduacion{
  ID_Estado Int @id @default(autoincrement())
  estado Int
  registroTrabajograd registroTrabajoGraduacion[]
}

model Autor{
  ID_Autor Int @id @default(autoincrement())
  primerNombre String
  segundoNombre String?
  tercerNombre String?
  primerApellido String
  segundoApellido String?
  carnet String?
  registroTrabajograd EnlaceTrabajoAutor[]
}

model registroTrabajoGraduacion{
  ID_Detalle Int @id @default(autoincrement())
  fechaCarga DateTime @default(now())
  fechaActualizacion DateTime @default(now())
  fechaPublicacion DateTime?
  trabajoGrad TrabajoGraduacion  @relation(fields: [ID_trabajo], references: [ID_Trabajo])
  ID_trabajo Int
  categoria Categoria  @relation(fields: [ID_categoria], references: [ID_Categoria])
  ID_categoria Int
  formato Formato  @relation(fields: [ID_formato], references: [ID_Formato])
  ID_formato Int
  carrera Carrera  @relation(fields: [ID_carrera], references: [ID_Carrera])
  ID_carrera Int
  // autor Autor  @relation(fields: [ID_autor], references: [ID_Autor])
  // ID_autor Int
  usuario Usuario  @relation(fields: [ID_usuario], references: [ID_Usuario])
  ID_usuario Int
  estado estadoTrabajoGraduacion  @relation(fields: [ID_estado], references: [ID_Estado])
  ID_estado Int
  tipoMaterial TipoMaterial @relation(fields: [ID_TipoMaterial], references: [ID_TipoMaterial])
  ID_TipoMaterial Int
  idiomas Idiomas @relation(fields: [ID_Idioma], references: [ID_Idioma])
  ID_Idioma Int
  autores EnlaceTrabajoAutor[]
  archivoAnexo ArchivoAnexo[]
  autoresCorp EnlaceTrabajoACorporativo[]

}

model EnlaceTrabajoAutor{
  ID_Autor Int
  ID_Detalle Int
  autor Autor @relation(fields: [ID_Autor], references: [ID_Autor])
  registroTrabajoGraduacion registroTrabajoGraduacion @relation(fields: [ID_Detalle], references: [ID_Detalle])
  @@id([ID_Autor, ID_Detalle])
}

model AutorCorporativo{
  ID_AutorC Int @id @default(autoincrement())
  nombreAutor String
  registroTrabajograd EnlaceTrabajoACorporativo[]
}

model EnlaceTrabajoACorporativo{
  ID_AutorC Int
  ID_Detalle Int 
  autorCorp AutorCorporativo @relation(fields: [ID_AutorC], references: [ID_AutorC])
  registroTrabajoGraduacion registroTrabajoGraduacion @relation(fields: [ID_Detalle], references: [ID_Detalle])
  @@id([ID_AutorC, ID_Detalle])
}

model ArchivoAnexo{
  ID_Archivo Int @id @default(autoincrement())
  direccionGuardado String
  registroTrabajoGraduacion registroTrabajoGraduacion @relation(fields: [ID_detalle], references: [ID_Detalle])
  ID_detalle Int
}